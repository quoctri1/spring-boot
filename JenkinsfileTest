 pipeline {
     agent any

     options {
         disableConcurrentBuilds()   
         skipDefaultCheckout()
     }

     triggers {
         upstream(upstreamProjects: 'MyProjectSCM')
     }

     stages {
         stage('Build') {
            steps {
              lock('MyProjectSCM') {
                echo 'Build within MyProjectSCM lock...'
              }
            }
         }
     }
 }